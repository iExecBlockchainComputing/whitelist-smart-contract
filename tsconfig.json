{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["config/**/*", "ignition/**/*", "test/**/*", "scripts/**/*", "utils/**/*"],
  "exclude": ["node_modules", "typechain-types"],
  "files": ["./hardhat.config.ts"]
}
